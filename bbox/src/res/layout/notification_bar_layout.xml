<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="horizontal"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:gravity="center_horizontal"
	android:id="@+id/top"
	android:layout_margin="0px"
	android:background="#191919">
	
    <FrameLayout 
		android:layout_width="0dp"
		android:layout_height="fill_parent"
		android:layout_weight="1" >
		<ImageView
			android:id="@+id/moom_view_1"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:adjustViewBounds="true" />
		<ImageView
			android:id="@+id/front_view_1"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:adjustViewBounds="true" 
			android:background="@drawable/notification_cell_selected_bg"
			android:visibility="gone"/>
    </FrameLayout>
	
    <FrameLayout 
		android:layout_width="0dp"
		android:layout_height="fill_parent"
		android:layout_weight="1" >
		<ImageView
			android:id="@+id/moom_view_2"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:adjustViewBounds="true" />
		<ImageView
			android:id="@+id/front_view_2"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:adjustViewBounds="true" 
			android:background="@drawable/notification_cell_selected_bg"
			android:visibility="gone"/>
    </FrameLayout>
	
    <FrameLayout 
		android:layout_width="0dp"
		android:layout_height="fill_parent"
		android:layout_weight="1" >
		<ImageView
			android:id="@+id/moom_view_3"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:adjustViewBounds="true" />
		<ImageView
			android:id="@+id/front_view_3"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:adjustViewBounds="true" 
			android:background="@drawable/notification_cell_selected_bg"
			android:visibility="gone"/>
    </FrameLayout>
	
    <FrameLayout 
		android:layout_width="0dp"
		android:layout_height="fill_parent"
		android:layout_weight="1" >
		<ImageView
			android:id="@+id/moom_view_4"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:adjustViewBounds="true" />
		<ImageView
			android:id="@+id/front_view_4"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:adjustViewBounds="true" 
			android:background="@drawable/notification_cell_selected_bg"
			android:visibility="gone"/>
    </FrameLayout>
</LinearLayout>